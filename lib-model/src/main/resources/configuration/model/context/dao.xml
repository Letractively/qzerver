<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.dao.annotation.PersistenceExceptionTranslationPostProcessor"/>

    <bean id="abstractEntityJpaDao" abstract="true">
    </bean>

    <bean id="clusterGroupDao" class="org.qzerver.model.dao.cluster.impl.ClusterGroupJpaDao" parent="abstractEntityJpaDao"/>

    <bean id="clusterNodeDao" class="org.qzerver.model.dao.cluster.impl.ClusterNodeJpaDao" parent="abstractEntityJpaDao"/>

    <bean id="scheduleJobDao" class="org.qzerver.model.dao.job.impl.ScheduleJobJpaDao" parent="abstractEntityJpaDao"/>

    <bean id="scheduleExecutionDao" class="org.qzerver.model.dao.job.impl.ScheduleExecutionJpaDao" parent="abstractEntityJpaDao"/>

</beans>