<?xml version="1.0" encoding="UTF-8" ?>
<persistence
        xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">

    <persistence-unit name="ApplicationDataSource" transaction-type="RESOURCE_LOCAL">
        <description>QZERVER</description>
        <mapping-file>configuration/jpa/mappings/persistence-unit-metadata.xml</mapping-file>
        <mapping-file>configuration/jpa/mappings/entities/abstract.xml</mapping-file>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
        <validation-mode>CALLBACK</validation-mode>
    </persistence-unit>

</persistence>