<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings
        xmlns="http://java.sun.com/xml/ns/persistence/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
        version="2.0">

    <entity name="ScheduleAction" class="org.qzerver.model.domain.action.ScheduleAction">
        <table name="qzerver_scheduler_action"/>
        <attributes>
            <id name="id">
                <column name="id" nullable="false"/>
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="type">
                <column name="type" nullable="false"/>
                <enumerated>ORDINAL</enumerated>
            </basic>
            <version name="version"/>
            <one-to-one name="job" fetch="LAZY" optional="false">
                <join-column name="scheduler_job_id" nullable="false" referenced-column-name="id"/>
            </one-to-one>
        </attributes>

    </entity>

</entity-mappings>