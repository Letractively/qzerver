<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings
        xmlns="http://java.sun.com/xml/ns/persistence/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
        version="2.0">

    <entity name="ClusterNode" class="org.qzerver.model.domain.entities.cluster.ClusterNode">
        <table name="qzerver_cluster_node"/>
        <attributes>
            <id name="id">
                <column name="id" nullable="false"/>
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="domain">
                <column name="domain" nullable="false" length="128"/>
            </basic>
            <basic name="comment">
                <column name="comment" nullable="true" length="128"/>
            </basic>
            <basic name="orderIndex">
                <column name="order_index" nullable="false"/>
            </basic>
            <basic name="active">
                <column name="active" nullable="false"/>
            </basic>
            <version name="version"/>
            <many-to-one name="group" fetch="LAZY" optional="false">
                <join-column name="cluster_group_id" referenced-column-name="id" nullable="false"/>
            </many-to-one>
        </attributes>
    </entity>

</entity-mappings>