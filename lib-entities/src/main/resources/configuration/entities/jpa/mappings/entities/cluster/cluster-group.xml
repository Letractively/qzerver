<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings
        xmlns="http://java.sun.com/xml/ns/persistence/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
        version="2.0">

    <entity name="ClusterGroup" class="org.qzerver.model.domain.entities.cluster.ClusterGroup">
        <table name="qzerver_cluster_group"/>
        <attributes>
            <id name="id">
                <column name="id" nullable="false"/>
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="name">
                <column name="name" nullable="false" length="256"/>
            </basic>
            <basic name="rollingIndex">
                <column name="rolling_index" nullable="false"/>
            </basic>
            <basic name="strategy">
                <column name="strategy" nullable="false"/>
                <enumerated>ORDINAL</enumerated>
            </basic>
            <basic name="limitTrials">
                <column name="limit_trials" nullable="false"/>
            </basic>
            <basic name="limitDurationMs">
                <column name="limit_duration" nullable="false"/>
            </basic>
            <version name="version"/>
            <one-to-many name="nodes" fetch="LAZY" mapped-by="group" orphan-removal="true">
                <order-by>orderIndex</order-by>
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-many>
        </attributes>
    </entity>

</entity-mappings>