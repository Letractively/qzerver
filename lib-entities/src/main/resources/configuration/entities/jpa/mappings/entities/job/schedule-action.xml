<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings
        xmlns="http://java.sun.com/xml/ns/persistence/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
        version="2.0">

    <entity name="ScheduleAction" class="org.qzerver.model.domain.entities.job.ScheduleAction">
        <table name="qzerver_schedule_action"/>
        <attributes>
            <id name="id">
                <column name="id" nullable="false"/>
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="type">
                <column name="type" nullable="false"/>
                <enumerated>ORDINAL</enumerated>
            </basic>
            <basic name="archived">
                <column name="archived" nullable="false"/>
            </basic>
            <basic name="definition" fetch="LAZY">
                <column name="definition" nullable="true"/>
                <lob/>
            </basic>
            <basic name="created">
                <column name="created" nullable="false"/>
            </basic>
            <version name="version"/>
            <many-to-one name="clusterGroup" fetch="LAZY" optional="true">
                <join-column name="cluster_group_id" referenced-column-name="id" nullable="true"/>
            </many-to-one>
        </attributes>
    </entity>

</entity-mappings>