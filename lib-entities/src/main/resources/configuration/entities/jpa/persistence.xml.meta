<?xml version="1.0" encoding="UTF-8" ?>
<persistence
        xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">

    <persistence-unit name="ApplicationDataSource" transaction-type="RESOURCE_LOCAL">
        <description>QZERVER</description>
        <mapping-file>/configuration/entities/jpa/mappings/persistence-unit-metadata.xml.meta</mapping-file>
        <mapping-file>/configuration/entities/jpa/mappings/entities/abstract.xml</mapping-file>
        <mapping-file>/configuration/entities/jpa/mappings/entities/cluster/cluster-node.xml</mapping-file>
        <mapping-file>/configuration/entities/jpa/mappings/entities/cluster/cluster-group.xml</mapping-file>
        <mapping-file>/configuration/entities/jpa/mappings/entities/job/schedule-job.xml</mapping-file>
        <mapping-file>/configuration/entities/jpa/mappings/entities/job/schedule-group.xml</mapping-file>
        <mapping-file>/configuration/entities/jpa/mappings/entities/job/schedule-execution.xml</mapping-file>
        <mapping-file>/configuration/entities/jpa/mappings/entities/job/schedule-execution-node.xml</mapping-file>
        <mapping-file>/configuration/entities/jpa/mappings/entities/job/schedule-execution-result.xml</mapping-file>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
        <validation-mode>CALLBACK</validation-mode>
    </persistence-unit>

    <!--
        Special mapping file for metadata generator. We need an additional mapping WITH leading slash due to bug in
        Hibernate metamodel generator

        https://hibernate.onjira.com/browse/METAGEN-75
    -->

</persistence>